  <main>
    <form class="login-form" action="/signup" method="POST" novalidate>
      <div class="form-control">
        <label for="email">Email</label>
        <input
          class="<%= validationErrors.find(error => error.param === 'email') ? 'invalid' : '' %>"
          type="email"
          name="email"
          id="email"
          value=""
        >
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input
          class="<%= validationErrors.find(error => error.param === 'password') ? 'invalid' : '' %>"
          type="password"
          name="password"
          id="password"
          value=""
        >
      </div>
      <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input
          class="<%= validationErrors.find(error => error.param === 'confirmPassword') ? 'invalid' : '' %>"
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          value=""
        >
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn" type="submit">Sign Up</button>
      <button class="btn" type="submit">
        <a href="/login">Đã có tài khoản</a>
      </button>
    </form>
  </main>