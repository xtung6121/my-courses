<style>
    .qty {
        margin-left: auto;
        margin-right: 1.25rem;
    }

    .order-btn-container {
        width: 50%;
        margin: 1.5rem auto 0 auto;
    }

    .cart__item-list {
        list-style: none;
        margin: 0;
        padding: 0;
        margin: auto;
        width: 50%;
    }

    .cart__item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.26);
        border-radius: 5px;
        margin: 1rem 0;
    }

    .cart__item:first-of-type {
        margin-top: 0;
    }

    .cart__item:last-of-type {
        margin-bottom: 0;
    }

    .cart__item h1,
    .cart__item h2 {
        margin-right: 1rem;
        font-size: 1.2rem;
        margin: 0;
    }

    /* Smartphones */
    @media screen and (max-width: 767px) {

        .order-btn-container,
        .cart__item-list {
            width: 90%;
        }

        .qty {
            margin-right: 0.75rem;
        }

        .cart__item h1,
        .cart__item h2 {
            font-size: 1rem;
        }
    }

    /* Tablets */
    @media screen and (min-width: 768px) and (max-width: 991px) {

        .order-btn-container,
        .cart__item-list {
            width: 80%;
        }
    }

    /* Smaller computer screens */
    @media screen and (min-width: 992px) and (max-width: 1400px) {

        .order-btn-container,
        .cart__item-list {
            width: 55%;
        }
    }

    /* Larger computer screens */
    @media screen and (min-width: 1600px) {

        .order-btn-container,
        .cart__item-list {
            width: 50%;
        }
    }
</style>
<main>
    {{#if (gt products.length 0)}}
    <ul class="cart__item-list">
        <!-- p refers to object passed to cartProducts array in shop controller getCart action -->
        {{#each products}}
        <li class="cart__item">
            <!-- cartitem is automatically created (Sequelize) key for inbetween cartitems table and the entry for this product in it -->
            <h1>{{this.productId.title}}</h1>
            <div class="qty">
                <h2>Qty: {{this.quantity}}</h2>
            </div>
            <form action="/cart-delete-item" method="POST">
                <input type="hidden" value="{{this.productId._id}}" name="productId">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button class="btn-danger" type="submit">Delete</button>
            </form>
        </li>
        {{/each}}
    </ul>
    <div class="order-btn-container">
        <!-- <form action="/create-order" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button class="btn" type="submit">Checkout</button>
      </form> -->
        <a class="btn" href="/checkout">Thanh toán</a>
    </div>
    {{else}}
    <h1>Không có sản phẩm trong giỏ hàng</h1>
    {{/if}}
</main>